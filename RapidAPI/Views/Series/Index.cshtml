@model List<SeriesViewModel>
@{
    ViewData["Title"] = "Index";
}
<br />
<h3>IMBD En İyi 100 Dizi</h3>
<br />

<table class="table table-hover" id="tbl1" dt-responsive nowrap>
    <thead>
    <tr>
        <th>#</th>
        <th>Dizi Adı</th>
        <th>Çıkış Yılı</th>
        <th>Puanı</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <th>@item.rank</th>
            <th><img src="@item.image" style="height:100px;width:75px" /> <a href="@item.imdb_link" target="_blank"> @item.title</a> </th>
      
            <td>@item.year</td>
            <td>@item.rating</td>
        </tr>
    }
    </tbody>
</table>


